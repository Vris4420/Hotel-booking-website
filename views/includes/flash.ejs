<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissble fade show col-6 offset-3" role="alert">
        <%= success %>
        <div style="float: right;">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
       
    </div>

<% } %>


<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissble fade show col-6 offset-3" role="alert">
        <%= error %>
        <div style="float: right;">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
       
    </div>

<% } %>